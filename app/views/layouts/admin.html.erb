<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>Project Alpaca - ADMIN</title>
		<%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>

		<%= stylesheet_link_tag "#{params[:controller]}", media: 'all', 'data-turbolinks-track' => true %>
		<%#= javascript_include_tag "#{params[:controller]}", 'data-turbolinks-track' => true %>

		<%= render partial: partial_admin('plugin_cdn') %>

		<%= csrf_meta_tags %>
	</head>

	<body class="backend">

		<%= render partial: partial_admin('navbar') %>

		<!-- RAILS FLASH MESSAGES -->
		<div class="alert-fixed-top container">
			<% if flash[:notice].present? %>
				<div class="alert alert-success" role="alert">
					<%= flash[:notice] %>
					<a class="close" data-dismiss="alert" href="#">&times;</a>
				</div>
			<% end %>

			<% if flash[:error].present? %>
				<div class="alert alert-error" role="alert">
					<%= flash[:error] %>
					<a class="close" data-dismiss="alert" href="#">&times;</a>
				</div>
			<% end %>
		</div>

		<div class="container">
			<%= yield %>
		</div>
	</body>

</html>
