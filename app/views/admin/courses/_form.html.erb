<%= simple_form_for(@resource, :url => url,
                                 :method => method,
                                 :html => {
                                        :multipart => true,
                                    :class => "form-horizontal"
                                    }) do |f| %>

    <div class="conteiner">
        <div class="row">
            <div class="col-md-3">
                <%= render partial: partial_admin('form_sidebar') %>
            </div>

            <div class="col-md-9">
                <div class="panel panel-default">
                	<div class="panel-body">
            			<fieldset>
            				<legend class="legend-sm">Name and description</legend>

            				<%= f.input :name, input_html: { class: 'form-control' } %>

            				<%= f.input :description, input_html: { class: 'form-control' } %>

            				<%#= f.input :picture, input_html: { class: 'form-control' } %>

                            <%= f.input :picture, as: :image_preview,
                                    input_html: {class: 'form-control'} %>

            			</fieldset>

                        <fieldset>
                            <legend class="legend-sm">Features</legend>

                            <%= f.input :rating, input_html: { class: 'form-control' } %>

                            <%= f.input :category_id, input_html: { class: 'form-control' } %>

                            <%= f.input :sub_category_id, input_html: { class: 'form-control' } %>
                        </fieldset>
                	</div>
                </div>
            </div>
        </div>
    </div>
<% end %>
